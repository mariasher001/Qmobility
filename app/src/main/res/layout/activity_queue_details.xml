<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Queues.QueueDetailsActivity">

    <TextView
        android:id="@+id/queueDetailsHeaderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Queue Details"
        android:textColor="#FF6E40"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/smallHeaderTextView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="smart_queue_system"
        android:textColor="#FF6E40"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/queueDetailsHeaderTextView"
        app:layout_constraintStart_toStartOf="@+id/queueDetailsHeaderTextView"
        app:layout_constraintTop_toBottomOf="@+id/queueDetailsHeaderTextView" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/inner_layout_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/smallHeaderTextView6"
        tools:ignore="SpeakableTextPresentCheck">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/queueNamePlaceHolderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:text="Queue Name"
                android:textColor="#FF6E40"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/queueNameQueueDetailsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Queue Name"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/queueNamePlaceHolderTextView"
                app:layout_constraintTop_toBottomOf="@+id/queueNamePlaceHolderTextView" />

            <TextView
                android:id="@+id/creatorNamePlaceHolderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Creator Name"
                android:textColor="#FF6E40"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/queueNameQueueDetailsTextView" />

            <TextView
                android:id="@+id/creatorNameQueueDetailsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Creator Name"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/creatorNamePlaceHolderTextView"
                app:layout_constraintTop_toBottomOf="@+id/creatorNamePlaceHolderTextView" />

            <TextView
                android:id="@+id/queueStartTimePlaceHolderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Start Time"
                android:textColor="#FF6E40"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/creatorNameQueueDetailsTextView" />

            <TextView
                android:id="@+id/queueStartTimeQueueDetailsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Time"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/queueStartTimePlaceHolderTextView"
                app:layout_constraintTop_toBottomOf="@+id/queueStartTimePlaceHolderTextView" />

            <TextView
                android:id="@+id/queueEndTimePlaceHolderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="End Time"
                android:textColor="#FF6E40"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/queueStartTimeQueueDetailsTextView" />

            <TextView
                android:id="@+id/queueEndTimeQueueDetailsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Time"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/queueEndTimePlaceHolderTextView"
                app:layout_constraintTop_toBottomOf="@+id/queueEndTimePlaceHolderTextView" />

            <TextView
                android:id="@+id/queueStatusPlaceHolderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Status"
                android:textColor="#FF6E40"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/queueEndTimeQueueDetailsTextView" />

            <TextView
                android:id="@+id/queueStatusQueueDetailsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/queueStatusPlaceHolderTextView"
                app:layout_constraintTop_toBottomOf="@+id/queueStatusPlaceHolderTextView" />

            <TextView
                android:id="@+id/numberOfActiveCountersPlaceHolderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Active Counters"
                android:textColor="#FF6E40"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/queueStatusQueueDetailsTextView" />

            <TextView
                android:id="@+id/numberOfActiveCountersQueueDetailsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/numberOfActiveCountersPlaceHolderTextView"
                app:layout_constraintTop_toBottomOf="@+id/numberOfActiveCountersPlaceHolderTextView" />

            <TextView
                android:id="@+id/numberOfClientsInQueueDetailsPlaceHolderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Number of clients"
                android:textColor="#FF6E40"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/numberOfActiveCountersQueueDetailsTextView" />

            <TextView
                android:id="@+id/numberOfClientsInQueueDetailsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/numberOfClientsInQueueDetailsPlaceHolderTextView"
                app:layout_constraintTop_toBottomOf="@+id/numberOfClientsInQueueDetailsPlaceHolderTextView" />

            <TextView
                android:id="@+id/averageCustomerTimePlaceHolderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Average Client Time"
                android:textColor="#FF6E40"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/numberOfClientsInQueueDetailsTextView" />

            <TextView
                android:id="@+id/averageClientTimeQueueDetailsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/averageCustomerTimePlaceHolderTextView"
                app:layout_constraintTop_toBottomOf="@+id/averageCustomerTimePlaceHolderTextView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>